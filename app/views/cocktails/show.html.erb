<div class="container p-3 background-image">
  <div class="row">
    <div class="card-trip-show mx-auto">
      <img src="<%= @cocktail.url%>" />
      <div class="card-trip-infos">
        <div>
          <h2><%=  @cocktail.name%></h2>
          <p><%=  @cocktail.description%> </p>
          <h2 class = mt-2>What you need</h2>
          <ul class="list-group column mb-2">
            <% @cocktail.doses.each do |dose| %>
            <div class = "row m-1">
              <p><%= dose.description %> <%= dose.ingredient.name %></p>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash-alt ml-2" aria-hidden="true"></i>
              <% end %>
            </div>
            <% end %>
          </ul>
          <div class="d-flex">
            <%= link_to "All cocktails", cocktails_path, class: "btn btn-primary" %>
            <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
