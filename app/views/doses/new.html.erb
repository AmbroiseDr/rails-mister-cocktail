<div class="container">
  <div class="card mt-4 p-2">
    <h2><%= @cocktail.name %></h2>
    <h4>Current doses</h4>
      <ul class="list-group column mb-2">
        <% @cocktail.doses.each do |dose| %>
          <p><%= dose.order %> - <%= dose.description %> <%= dose.ingredient.name %></p>
        <% end %>
      </ul>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <div class="form-row">
          <div class="col-12">
            <%= f.association :ingredient, collection: Ingredient.order('name ASC'), input_html: { class: 'form-control' } %>
            <%= f.input :order %>
          </div>
          <div class="col-12">
            <%= f.input :description %>
          </div>
        </div>
        <%= f.button :submit,"Let's create a dose now !", class: "btn btn-primary w-100" %>
      <% end %>
  </div>
 </div>
